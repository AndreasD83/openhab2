
rule "Morgens Werktag"
when 
    Time cron "0 30 6 ? * MON-FRI"
then
		logInfo("morning", "now: "+now+" sunrise!")
		sendCommand(JalousieBueroDown, OFF)
		sendCommand(JalousieWohnzimmerKleinDown, OFF)
		sendCommand(JalousieWohnzimmerGrossDown, OFF)
		sendCommand(JalousieKuecheDown, OFF)
		sendCommand(JalousieBueroUp, ON)
		sendCommand(JalousieWohnzimmerKleinUp, ON)
		sendCommand(JalousieWohnzimmerGrossUp, ON)
		sendCommand(JalousieKuecheUp, ON)
end


