rule "Abends Licht an"
when 
    Time cron "0 45 20 * * ?"
then
		logInfo("evening", "now: "+now+" light!")	
		sendCommand(LichtKueche, ON)
		sendCommand(LichtBuero, ON)
end

rule "Abends Licht aus"
when 
    Time cron "0 00 22 * * ?"
then
		logInfo("evening", "now: "+now+" light OFF!")	
		sendCommand(LichtKueche, OFF)
		sendCommand(LichtBuero, OFF)
		
end
