rule "Abends Licht Buero an"
when 
    Time cron "0 57 20 * * ?"
then
		logInfo("evening", "now: "+now+" light!")	
		if(LichtBuero.state == OFF){
			logInfo("evening", "LichtBuero OFF...")
			if(TasterBuero.state == ON){
				logInfo("evening", "ON -> OFF...")	
				sendCommand(TasterBuero, OFF)
			} else{
				logInfo("evening", "OFF -> ON...")
				sendCommand(TasterBuero, ON)
			}
		}
		
		
end

rule "Abends Licht Buero aus"
when 
